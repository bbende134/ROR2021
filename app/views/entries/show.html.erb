<%content_for :title do%>
  <%= @entry.meal_type %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<%end%>

<p>
  <strong>Étkezés típusa:</strong>
  <%= @entry.meal_type %>
</p>

<p>
  <strong>Kalória:</strong>
  <%= @entry.calories %>
</p>

<p>
  <strong>Fehérje</strong>
  <%= @entry.proteins %>
</p>

<p>
  <strong>Szénhidrát:</strong>
  <%= @entry.carbohydrates %>
</p>

<p>
  <strong>Zsír:</strong>
  <%= @entry.fats %>
</p>

<%= link_to 'Edit', edit_entry_path(@entry) %> |
<%= link_to 'Delete', entry_path(@entry), method: :delete, data: { confirm: "Biztosan törlöd?"} %>
